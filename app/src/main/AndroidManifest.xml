<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.appfocus.messageit">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:name="in.appfocus.messageit.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="in.appfocus.messageit.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="in.appfocus.messageit.CreateContactActivity"
            android:label="Add Contact"
            android:parentActivityName="in.appfocus.messageit.ContactListActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.appfocus.messageit.ContactListActivity" />
        </activity>
        <activity
            android:name="in.appfocus.messageit.SendSMSActivity"
            android:label="@string/title_activity_send_sms"
            android:parentActivityName="in.appfocus.messageit.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.appfocus.messageit.MainActivity" />
        </activity>
        <activity
            android:name="in.appfocus.messageit.CreateGroupActivity"
            android:label="Create Group"
            android:parentActivityName="in.appfocus.messageit.GroupsListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.appfocus.messageit.GroupsListActivity" />
        </activity>
        <activity
            android:name="in.appfocus.messageit.AdminActivity"
            android:label="Admin"
            android:parentActivityName="in.appfocus.messageit.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.appfocus.messageit.MainActivity" />
        </activity>
        <activity
            android:name="in.appfocus.messageit.HelpActivity"
            android:label="Help"
            android:parentActivityName="in.appfocus.messageit.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.appfocus.messageit.MainActivity" />
        </activity>
        <activity
            android:name="in.appfocus.messageit.GroupsListActivity"
            android:label="@string/title_activity_groups_list"
            android:launchMode="singleTop"
            android:parentActivityName="in.appfocus.messageit.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.appfocus.messageit.MainActivity" />
        </activity>
        <activity
            android:name="in.appfocus.messageit.ContactListActivity"
            android:label="@string/title_activity_contact_list"
            android:launchMode="singleTop"
            android:parentActivityName="in.appfocus.messageit.GroupsListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.appfocus.messageit.GroupsListActivity" />
        </activity>
        <activity
            android:name="in.appfocus.messageit.EditGroupActivity"
            android:parentActivityName="in.appfocus.messageit.ContactListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.appfocus.messageit.ContactListActivity" />
        </activity>
        <activity
            android:name="in.appfocus.messageit.EditContactActivity"
            android:parentActivityName="in.appfocus.messageit.ContactListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.appfocus.messageit.ContactListActivity" />
        </activity>
        <activity
            android:name="in.appfocus.messageit.HistoryActivity"
            android:label="Message History"
            android:parentActivityName="in.appfocus.messageit.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.appfocus.messageit.MainActivity" />
        </activity>
        <activity
            android:name="in.appfocus.messageit.DeliveryReport"
            android:label="Delivery Report"
            android:parentActivityName="in.appfocus.messageit.HistoryActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.appfocus.messageit.HistoryActivity" />
        </activity>
        <activity
            android:name="in.appfocus.messageit.DeviceInfoActivity"
            android:label="Device Info"
            android:parentActivityName="in.appfocus.messageit.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.appfocus.messageit.MainActivity" />
        </activity>
    </application>

</manifest>