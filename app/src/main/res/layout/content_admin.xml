<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <EditText
            android:id="@+id/etAppTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fields_spacing_vertical"
            android:hint="App Title"
            android:layout_weight="3"
            android:maxLength="20"/>

        <EditText
            android:id="@+id/etAppSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fields_spacing_vertical"
            android:hint="App Sub Title"
            android:maxLength="35"
            android:layout_weight="3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/fields_spacing_vertical"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etSenderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Sender ID"
                android:layout_weight="3"
                android:inputType="textPersonName"/>

            <EditText
                android:id="@+id/etRoute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="Route"
                android:inputType="number" />

        </LinearLayout>

        <EditText
            android:id="@+id/etApiPin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fields_spacing_vertical"
            android:hint="API PIN"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/etUID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fields_spacing_vertical"
            android:hint="User ID"
            android:inputType="textPersonName"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>